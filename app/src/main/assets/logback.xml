<configuration>
    <appender name="logcat" class="ch.qos.logback.classic.android.LogcatAppender">
        <appender name="logcat" class="ch.qos.logback.classic.android.LogcatAppender">
            <tagEncoder><pattern>[BK]</pattern></tagEncoder>
            <encoder><pattern>%class{0}.%M\(%F:%L\) %msg</pattern></encoder>
        </appender>
    </appender>

    <root level="debug" >
        <appender-ref ref="logcat" />
    </root>
</configuration>